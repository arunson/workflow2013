<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<locale-config>
			<default-locale>de</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>i18n</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<navigation-rule>
		<from-view-id>/faces/start.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toLoginPage</from-outcome>
			<to-view-id>/faces/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/faces/start.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>toSotivityPage</from-outcome>
			<to-view-id>/faces/sotivity.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
